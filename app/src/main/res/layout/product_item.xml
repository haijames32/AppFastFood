<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:paddingHorizontal="5dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/lo_product_item">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_product_item"
                android:layout_marginHorizontal="10dp"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/pizza1"/>
            <TextView
                android:id="@+id/tv_product_name_item"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="3dp"
                android:text="Pepperoni Pizza"
                android:textSize="14dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_product_price_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="10"
                    android:text="59.000Ä‘"
                    android:textColor="#FF5722"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cart_item"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>