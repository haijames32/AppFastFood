<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="#CCFFFCFC"
          >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pizza1"
        android:id="@+id/img_cart_item"/>
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name_cart_item"
            android:layout_marginTop="20dp"
            android:text="Pizza"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price_cart_item"
            android:layout_marginTop="5dp"
            android:text="$30"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#EA9073"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_plus_cart_item"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/plus"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#FBFBFB"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_soluong_cart_item"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#EA9073"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_minus_cart_item"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/minus"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>